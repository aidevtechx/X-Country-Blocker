{
  "manifest_version": 3,
  "name": "X Country Blocker",
  "version": "1.0",
  "description": "Blocks posts on X (Twitter) from users based in specific countries.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "countries.js",
        "pageScript.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}